<div class="cardheader">
  <% if @user.header.url.nil? %>
    <%= image_tag 'record_background.png', :id=>'image_inCardheader' %>
  <% else %>
    <%= image_tag @user.header, :id=>'image_inCardheader' %>
  <% end %>
</div>
<div class="avatar">
  <% if @user.avatar.url.nil? %>
    <%= image_tag 'unknown_person.png', :id=>'image_inAvatar' %>
  <% else %>
    <%= image_tag @user.avatar, :id=>'image_inAvatar' %>
  <% end %>
</div>
<%= form_for(@user, :url => {:controller => "users", :action => "edit_avatar_image" }) do |f| %>
  <%= f.file_field :attr_avatar %>
  <%= f.hidden_field :avatar_cache %>
  <%= f.submit "", id: "submit_for_avatar" %>
<% end %>
<%= form_for(@user, :url => {:controller => "users", :action => "edit_header_image" }) do |f| %>
  <%= f.file_field :attr_header %>
  <%= f.hidden_field :header_cache %>
  <%= f.submit "Create my header", class: "btn btn-lg btn-primary", id: "submit_for_header" %>
<% end %>